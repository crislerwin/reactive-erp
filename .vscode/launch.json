  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "port": 9229,
      "preLaunchTask": "pnpm run dev",
      "name": "Launch App",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Vite Unit Current File",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["${file}", "--config", "${workspaceFolder}/vitest.config.ts"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/*", "/node_modules/*", "/.next"]
    }
  ]
}
