generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Branch {
  branch_id     Int       @id @default(autoincrement())
  name          String
  staff_members Staff[]
  attributes    Json?
  created_at    DateTime  @default(now())
  updated_at    DateTime? @updatedAt
  deleted_at    DateTime?
  products      Product[]
}

model Staff {
  id         Int       @id @default(autoincrement())
  branch_id  Int
  first_name String
  last_name  String?
  email      String    @unique
  role       String
  active     Boolean   @default(true)
  branch     Branch    @relation(fields: [branch_id], references: [branch_id])
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt
  deleted_at DateTime?

  @@index([branch_id])
  @@index([email])
}

model Product {
  product_id          Int              @id @default(autoincrement())
  branch_id           Int
  name                String
  description         String?
  price               Float
  stock               Int              @default(0)
  colors              Json?
  product_category_id Int
  product_category    Product_Category @relation(fields: [product_category_id], references: [id])
  branch              Branch           @relation(fields: [branch_id], references: [branch_id])
  available           Boolean          @default(true)
  created_at          DateTime         @default(now())
  updated_at          DateTime         @updatedAt
  deleted_at          DateTime?

  @@index([branch_id])
  @@index([product_category_id])
  @@index([deleted_at])
}

model Product_Category {
  id          Int       @id @default(autoincrement())
  branch_id   Int
  name        String
  description String?
  active      Boolean   @default(true)
  created_at  DateTime  @default(now())
  updated_at  DateTime? @updatedAt
  deleted_at  DateTime?
  products    Product[]

  @@index([branch_id])
}
