generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Patient {
  id           String        @id() @default(uuid())
  email        String?
  firstName    String?
  lastName     String?
  phoneNumber  String?
  appointments Appointment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([email])
}

model Doctor {
  id           String        @unique @default(uuid())
  officeId     String?
  firstName    String?
  lastName     String?
  licenseId    String?
  profileImage String?
  appointments Appointment[]
  speciality   String?
  office       Office?       @relation(fields: [officeId], references: [id])

  @@index([officeId])
}

model Appointment {
  id              String    @unique @default(uuid())
  patient         Patient?  @relation(fields: [patientId], references: [id])
  patientId       String?
  doctorId        String?
  appointmentDate DateTime?
  status          String?
  doctor          Doctor?   @relation(fields: [doctorId], references: [id])

  @@index([patientId])
  @@index([doctorId])
}

model Office {
  id             String   @unique @default(uuid())
  registrationId String?  @unique @default("") @map("registrationId")
  socialReason   String?
  fantasyName    String?
  email          String?
  phoneNumber    String?
  doctors        Doctor[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([registrationId])
}
