generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Provider {
  id              Int       @unique @default(autoincrement())
  email           String    @unique
  first_name      String
  last_name       String
  institution_ids Json?
  bio             Json?
  active          Boolean?  @default(true)
  patients        Patient[]
  created_at      DateTime  @default(now())
  updated_at      DateTime? @updatedAt
  deleted_at      DateTime?

  @@index([id])
}

model Institution {
  institution_id  Int       @unique @default(autoincrement())
  email           String
  name            String
  attributes      Json?
  static_logo_url String?
  created_at      DateTime  @default(now())
  updated_at      DateTime? @updatedAt
  additional_info Json?

  @@index([institution_id])
  @@index([email])
}

model Patient {
  id          Int       @unique @default(autoincrement())
  email       String    @unique
  first_name  String
  last_name   String
  bio         Json
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  deleted_at  DateTime?
  provider_id Int
  provider    Provider  @relation(fields: [provider_id], references: [id])

  @@index([provider_id])
  @@index([id])
}
