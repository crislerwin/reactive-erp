generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Provider {
  id             Int          @unique @default(autoincrement())
  email          String       @unique
  first_name     String?
  middle_name    String?
  last_name      String?
  name           String
  bio            Json?
  created_at     DateTime     @default(now())
  updated_at     DateTime?    @updatedAt
  institution_id Int
  institution    Institution? @relation(fields: [institution_id], references: [id])

  @@index([email])
  @@index([institution_id])
}

model Institution {
  id              Int        @unique @default(autoincrement())
  company_code    String     @unique @default("")
  email           String
  name            String
  description     String?
  attributes      Json?
  static_logo_url String?
  created_at      DateTime   @default(now())
  updated_at      DateTime?  @updatedAt
  providers       Provider[]

  @@index([company_code])
}
