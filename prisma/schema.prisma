generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Branch {
  branch_id     Int        @id @default(autoincrement())
  name          String
  attributes    Json?
  created_at    DateTime   @default(now())
  updated_at    DateTime?  @updatedAt
  deleted_at    DateTime?
  products      Product[]
  customer      Customer[]
  staff_members Staff[]

  @@index([branch_id])
}

model Staff {
  id         Int       @id @default(autoincrement())
  branch_id  Int
  first_name String
  last_name  String?
  email      String    @unique
  role       String
  active     Boolean   @default(true)
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt
  deleted_at DateTime?
  branch     Branch    @relation(fields: [branch_id], references: [branch_id])

  @@index([branch_id])
  @@index([email])
}

model Product {
  product_id          Int             @id @default(autoincrement())
  branch_id           Int
  name                String
  description         String?
  price               Float
  stock               Int             @default(0)
  colors              Json?
  product_category_id Int
  product_category    ProductCategory @relation(fields: [product_category_id], references: [id])
  branch              Branch          @relation(fields: [branch_id], references: [branch_id])
  available           Boolean         @default(true)
  created_at          DateTime        @default(now())
  updated_at          DateTime        @updatedAt
  deleted_at          DateTime?

  @@index([branch_id])
  @@index([product_category_id])
  @@index([deleted_at])
}

model ProductCategory {
  id          Int       @id @default(autoincrement())
  branch_id   Int
  name        String
  description String?
  active      Boolean   @default(true)
  created_at  DateTime  @default(now())
  updated_at  DateTime? @updatedAt
  deleted_at  DateTime?
  products    Product[]

  @@index([branch_id])
}

model Invoice {
  id          Int       @id @default(autoincrement())
  branch_id   Int
  staff_id    Int
  customer_id Int
  items       Json
  total       Float
  status      String
  expires_at  DateTime
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  deleted_at  DateTime?
  customer    Customer? @relation(fields: [customer_id], references: [customer_id])

  @@index([branch_id])
  @@index([staff_id])
  @@index([customer_id])
}

model Customer {
  customer_id   Int       @id @default(autoincrement())
  branch_id     Int
  customer_code Int
  first_name    String
  last_name     String?
  email         String    @unique
  orders        Invoice[]
  branch        Branch    @relation(fields: [branch_id], references: [branch_id])
  phone         String?
  created_at    DateTime  @default(now())
  updated_at    DateTime? @updatedAt
  deleted_at    DateTime?

  @@index([branch_id])
}
