generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Branch {
  branch_id     Int       @unique @default(autoincrement())
  name          String
  website       String?
  logo_url      String?
  company_code  String
  staff_members Staff[]
  attributes    Json?
  created_at    DateTime  @default(now())
  updated_at    DateTime? @updatedAt
  deleted_at    DateTime?
  products      Product[]

  @@index([branch_id])
}

model Staff {
  id         Int       @unique @default(autoincrement())
  branch_id  Int
  first_name String
  last_name  String?
  email      String    @unique
  role       String
  active     Boolean   @default(true)
  branch     Branch    @relation(fields: [branch_id], references: [branch_id])
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt
  deleted_at DateTime?

  @@index([branch_id])
  @@index([email])
}

model Product {
  product_id          Int             @unique @default(autoincrement())
  branch_id           Int
  name                String
  description         String?
  price               Float
  currency            String
  stock               Int             @default(0)
  colors              Json?
  product_category_id Int
  product_category    ProductCategory @relation(fields: [product_category_id], references: [id])
  branch              Branch          @relation(fields: [branch_id], references: [branch_id])
  available           Boolean         @default(true)
  created_at          DateTime        @default(now())
  updated_at          DateTime        @updatedAt
  deleted_at          DateTime?

  @@index([branch_id])
  @@index([product_category_id])
  @@index([deleted_at])
}

model ProductCategory {
  id          Int       @unique @default(autoincrement())
  branch_id   Int
  name        String
  description String?
  active      Boolean   @default(true)
  created_at  DateTime  @default(now())
  updated_at  DateTime? @updatedAt
  deleted_at  DateTime?
  products    Product[]

  @@index([branch_id])
}

model Currency {
  id                 Int       @unique @default(autoincrement())
  currency_name      String
  currency_code      String
  currency_symbol    String
  currency_position  String
  decimal_separator  String
  thousand_separator String
  cent_precision     Int
  default            Boolean   @default(true)
  created_at         DateTime  @default(now())
  updated_at         DateTime? @updatedAt
}
