generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Staff {
    userId       String       @unique @default("")
    enterpriseId String       @id @unique @default("")
    email        String       @unique @default("")
    permissions  Permission[]
    name         String       @default("")
    role         String       @default("")
    enterprise   Enterprise?  @relation(fields: [enterpriseId], references: [enterpriseId])
    createdAt    DateTime     @default(now())
    updatedAt    DateTime     @updatedAt

    @@index([email])
    @@map("User")
}

model Enterprise {
    enterpriseId   String   @id @unique @default("")
    cnpj           String   @unique @default("")
    enterpriseName String   @default("")
    sponsorId      String   @default("")
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
    addressId      String?
    User           Staff[]

    @@index([cnpj])
}

model Permission {
    permissionId Int      @id @default(autoincrement())
    name         String   @default("")
    value        String   @default("")
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
    User         Staff?   @relation(fields: [userId], references: [userId])
    userId       String?

    @@index([userId])
}
