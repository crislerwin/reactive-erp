generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Provider {
  id              Int       @unique @default(autoincrement())
  email           String    @unique
  first_name      String
  middle_name     String?
  last_name       String?
  name            String?
  bio             Json?
  created_at      DateTime  @default(now())
  updated_at      DateTime? @updatedAt
  institution_ids Json?

  @@index([email])
}

model Institution {
  id              Int       @unique @default(autoincrement())
  company_code    String    @unique
  email           String
  name            String
  additional_info Json?
  attributes      Json?
  static_logo_url String?
  provider_ids    Json?
  created_at      DateTime  @default(now())
  updated_at      DateTime? @updatedAt

  @@index([company_code])
}

model User {
  id         Int      @unique @default(autoincrement())
  email      String   @unique
  name       String
  avatar_url String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  role       String?  @default("user")

  @@index([email])
}
